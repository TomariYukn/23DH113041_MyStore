@model PagedList.IPagedList<_23DH113041_MyStore.Models.Product>
@using PagedList.Mvc

<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        .search-container, .order-container {
            padding-top: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        img {
            height: 150px;
            width: 120px;
        }

        .product-header {
            background-color: #d3e8d3;
            text-align: center;
            padding: 10px;
            font-size: 24px;
            font-weight: bold;
        }

        .pagination-container {
            text-align: center;
            margin-top: 20px;
        }

        .add-new-button {
            margin-left: 0;
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    @if (Model != null && Model.Any())
    {
        <h2 class="product-header">DANH SÁCH SẢN PHẨM</h2>

        <table class="table bg-info container-fluid">
            <thead>
                <tr>
                    <th class="bg-success col-md-2">Hình ảnh</th>
                    <th class="bg-success col-md-3">Tên sản phẩm</th>
                    <th class="bg-success col-md-1">Đơn giá</th>
                    <th class="bg-success col-md-2">Danh mục</th>
                    <th class="bg-success col-md-4"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td><img src="@product.ProductImage" alt="Product Image" /></td>
                        <td>@Html.DisplayFor(modelItem => product.ProductName)</td>
                        <td>@Html.DisplayFor(modelItem => product.ProductPrice)</td>
                        <td>@Html.DisplayFor(modelItem => product.Category.CategoryName)</td>

                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = product.ProductID }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Chi tiết", "Details", new { id = product.ProductID }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Xóa", "Delete", new { id = product.ProductID }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="pagination-container">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchTerm = ViewData["SearchTerm"], minPrice = ViewData["MinPrice"], maxPrice = ViewData["MaxPrice"], sortOrder = ViewData["SortOrder"] }))
        </div>
    }
    else
    {
        <p>Không tìm được sản phẩm nào phù hợp</p>
    }

    <div class="add-new-button">
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
    </div>
</body>